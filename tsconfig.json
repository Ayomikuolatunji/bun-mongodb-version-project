{
  "compilerOptions": {
    "target": "ESNext",
    "module": "CommonJS",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "node",
    "allowJs": true,
    "lib": ["ESNext", "DOM"],
    "resolveJsonModule": true,
    "isolatedModules": true
  },
  "include": ["src/index.ts", "src/services/**/*", "src/models/**/*"]
}
